 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:background="@drawable/bg1_2x"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.matthew.myapplication.ChooseCalendar"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/School_Calendar"
            android:id="@+id/SC_button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/ECA_Calendar"
            android:id="@+id/ECA_button" />


    </LinearLayout>


